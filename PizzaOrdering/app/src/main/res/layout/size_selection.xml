<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_yellow"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/smallSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:buttonTint="#29B6F6"
        android:textSize="20dp"
        android:text="Small(10'')"/>

    <CheckBox
        android:id="@+id/mediumSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:buttonTint="#29B6F6"
        android:textSize="25dp"
        android:text="Medium(12'')" />


    <CheckBox
        android:id="@+id/largeSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Large(14'')"
        android:textSize="30dp"
        android:buttonTint="#29B6F6"/>

    <CheckBox
        android:id="@+id/extraLargeSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:buttonTint="#29B6F6"
        android:textSize="35dp"
        android:text="Extra Large(16'')"/>

    <Switch
        android:id="@+id/switchCheese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:textSize="25dp"
        android:text="Cheese"/>
    <Button
        android:id="@+id/button"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_confirm" />

    <ImageView
        android:id="@+id/imageView_pizza"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        app:srcCompat="@drawable/pizza" />


</androidx.appcompat.widget.LinearLayoutCompat>