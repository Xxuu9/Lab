<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_yellow"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="@string/menu_menu"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<!--    size selection-->
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rb_smallSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Small" />

        <RadioButton
            android:id="@+id/rb_mediumSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium" />

        <RadioButton
            android:id="@+id/rb_largeSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Large" />

        <RadioButton
            android:id="@+id/rb_extraLargeSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Extra Large" />

    </RadioGroup>

    <RadioButton
        android:id="@+id/rb_cheeseOrNot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Cheese"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/radioGroup" />

<!--topping selection-->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rb_cheeseOrNot"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView_greenolives"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/greenolives" />

    <TextView
        android:id="@+id/tv_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green Olives" />

    <TextView
        android:id="@+id/tv_go_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$3.99" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_greenolives_de"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="-" />
        <TextView
            android:id="@+id/editText_go_amount"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/bt_greenolives_in"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_greenpepper"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/greenpepper" />
    <TextView
        android:id="@+id/tv_gp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green Pepper"/>
    <TextView
        android:id="@+id/tv_gp_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$2.99" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_greenpepper_de"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="-" />
        <TextView
            android:id="@+id/editText_gp_amount"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/bt_greenpepper_in"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+" />

    </LinearLayout>


    <ImageView
        android:id="@+id/imageView_tomatoes"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/tomatoes" />

    <TextView
        android:id="@+id/tv_tm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tomato"/>

        <TextView
            android:id="@+id/tv_tm_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.99" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_tm_de"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-" />
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <Button
                android:id="@+id/bt_tm_in"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rb_cheeseOrNot"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_pineapple"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/pineapple" />

        <TextView
            android:id="@+id/tv_pa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pineapple" />
        <TextView
            android:id="@+id/tv_pa_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$2.99" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt_pa_de"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-" />
            <TextView
                android:id="@+id/editText_pa_amount"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <Button
                android:id="@+id/bt_pa_in"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView_mushroom"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/mushroom" />
        <TextView
            android:id="@+id/tv_mr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mushroom" />
        <TextView
            android:id="@+id/tv_mr_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$2.99" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt_mr_de"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-" />
            <TextView
                android:id="@+id/editText_mr_amount"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <Button
                android:id="@+id/bt_mr_in"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView_onion"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/onion" />
        <TextView
            android:id="@+id/tv_onion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Onion" />
        <TextView
            android:id="@+id/tv_onion_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$2.99" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt_onion_de"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-" />
            <TextView
                android:id="@+id/editText_onion_amount"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <Button
                android:id="@+id/bt_onion_in"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bt_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.978" />

</androidx.constraintlayout.widget.ConstraintLayout>

